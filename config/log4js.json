{
  "appenders": [
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "dateFile",
          "filename": "logs/access/log",
          "pattern": ".yyyy-MM-dd",
          "alwaysIncludePattern": true,
          "category": "Http"
        },
        {
          "type": "logLevelFilter",
          "level": "DEBUG",
          "appender": {
            "type": "dateFile",
            "filename": "logs/app/log",
            "pattern": ".yyyy-MM-dd",
            "alwaysIncludePattern": true
          }
        },
        {
          "type": "logLevelFilter",
          "level": "ERROR",
          "appender": {
            "type": "file",
            "filename": "logs/errors.log"
          }
        }
      ]
    }
  ]
}
